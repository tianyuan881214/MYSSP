        SELECT
        <include refid="MerchantBase_columns"/>,
        <include refid="BusinessBase_columns"/>,
        <include refid="FeeTable_columns"/>,
        <include refid="EnterAiliMerchant_columns"/>,
        A.ACCOUNT_NO AS ACCOUNT_NO,
